PROJECT_NAME=DocuAiPro-App


# Database
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/mydb

# Frontend
FRONTEND_URL=http://localhost:3000

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=60
SECRET_KEY=super-secret-key-change-this

# ===========================
# Third-party OAuth
# ===========================
GOOGLE_CLIENT_ID=your-google-client-id
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret

# ===========================
# Default LLM Provider
# ===========================
DEFAULT_LLM_PROVIDER=openai

# ===========================
# OpenAI
# ===========================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# ===========================
# Anthropic
# ===========================
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# ===========================
# Azure OpenAI
# ===========================
AZURE_API_KEY=your-azure-api-key
AZURE_ENDPOINT=https://your-azure-endpoint.openai.azure.com/
AZURE_DEPLOYMENT=your-azure-deployment-name
AZURE_API_VERSION=2024-05-01

# ===========================
# Google GenAI (Gemini)
# ===========================
GOOGLE_API_KEY=your-google-api-key
GOOGLE_GENAI_MODEL=gemini-pro

# ===========================
# Google Vertex AI
# ===========================
VERTEX_MODEL=chat-bison

# ===========================
# Cohere
# ===========================
COHERE_API_KEY=your-cohere-api-key
COHERE_MODEL=command-r

# ===========================
# Mistral
# ===========================
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_MODEL=mistral-large

# ===========================
# Groq
# ===========================
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=mixtral-8x7b

# ===========================
# HuggingFace
# ===========================
HF_MODEL=HuggingFaceH4/zephyr-7b-beta

# ===========================
# NVIDIA
# ===========================
NVIDIA_API_KEY=your-nvidia-api-key
NVIDIA_MODEL=nemotron-3

# ===========================
# AWS Bedrock
# ===========================
BEDROCK_MODEL=anthropic.claude-v2
AWS_REGION=us-east-1

# ===========================
# Storage Directories
# ===========================
DOC_UPLOAD_DIR=storage/uploads
DOC_INDEX_DIR=storage/indexes
